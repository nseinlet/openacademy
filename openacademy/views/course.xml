<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course.form</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="session_count" readonly="1"/>
                            <field name="session_filled_seats" readonly="1"/>
                            <field name="attended" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Sessions">
                                <field name="session_ids">
                                    <list string="Registered sessions">
                                        <field name="name"/>
                                        <field name="instructor_id"/>
                                        <field name="same_instructor_count"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <filter name="my_courses" string="My Courses"
                            domain="[('responsible_id', '=', uid)]"/>
                    <filter name="attended_ones" string="Attended courses"
                            domain="[('attended', '=', True)]"/>
                    <group>
                        <filter name="by_responsible" string="Responsible" context="{'group_by': 'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- override the automatically generated list view for courses -->
        <record model="ir.ui.view" id="course_list_view">
            <field name="name">course.list</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <list string="Course list">
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="session_filled_seats"/>
                    <field name="attended"/>
                </list>
            </field>
        </record>
    </data>
</odoo>